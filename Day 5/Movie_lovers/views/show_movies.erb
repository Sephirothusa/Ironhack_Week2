<div class="movies">
	
		<% @movies.each do |movie| %>
		<div class="movie">
			<h2><%= movie.title %></h2>
			<img class="img-poster" src="https://image.tmdb.org/t/p/w500<%= movie.poster_path %>" />
			<form method="POST" action="/result">
			<button type="submit" class="button" name="quiz_answer" value="<%= movie.title %>"><%= movie.title %></button>
			</form>
		</div>
		<% end %>
	
</div>

